---
/**
 * LandingPage.astro - Main orchestrator for the Canaveral landing page
 *
 * This component composes all landing page sections and includes
 * scroll-triggered animations via Intersection Observer.
 */

import PainPoints from './PainPoints.astro';
import Solution from './Solution.astro';
import Features from './Features.astro';
import Frameworks from './Frameworks.astro';
import Comparison from './Comparison.astro';
import QuickStart from './QuickStart.astro';
import FinalCTA from './FinalCTA.astro';
---

<div class="landing-page">
	<PainPoints />
	<Solution />
	<Features />
	<Frameworks />
	<Comparison />
	<QuickStart />
	<FinalCTA />
</div>

<!-- Smooth scroll for anchor links -->
<script>
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function(e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({ behavior: 'smooth', block: 'start' });
			}
		});
	});
</script>

<style is:global>
	/* Landing Page Base Styles */
	.landing-page {
		width: 100%;
		max-width: 100%;
	}

	/* Simplified animations */
	.landing-section {
		opacity: 1;
	}

	/* Reduced motion support */
	@media (prefers-reduced-motion: reduce) {
		.hero-artwork,
		.artwork-glow,
		.badge-dot,
		.scroll-wheel,
		.scroll-arrow {
			animation: none !important;
		}
	}
</style>
