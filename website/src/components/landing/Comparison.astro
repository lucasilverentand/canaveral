---
// Comparison Section - "From Chaos to Control"
import SectionHeader from './shared/SectionHeader.astro';
import Terminal from './shared/Terminal.astro';

const comparisons = [
	{ feature: 'Configuration', fastlane: 'Ruby DSL (Fastfile)', canaveral: 'YAML/TOML (canaveral.yaml)' },
	{ feature: 'Learning Curve', fastlane: 'Ruby knowledge required', canaveral: 'Zero Ruby, declarative' },
	{ feature: 'Framework Support', fastlane: 'Plugins per framework', canaveral: 'Universal, auto-detect' },
	{ feature: 'Code Signing', fastlane: 'match (separate setup)', canaveral: 'Built-in, same config' },
	{ feature: 'CI/CD', fastlane: 'Manual env setup', canaveral: 'Works out of the box' },
	{ feature: 'Error Messages', fastlane: 'Ruby stack traces', canaveral: 'Actionable suggestions' }
];
---

<section class="comparison-section" id="comparison">
	<div class="container">
		<SectionHeader
			label="Comparison"
			title="From Chaos to Control"
			description="See how Canaveral simplifies your mobile release workflow."
		/>

		<div class="comparison-content">
			<!-- Comparison Table -->
			<div class="comparison-table-wrapper">
				<table class="comparison-table">
					<thead>
						<tr>
							<th>Feature</th>
							<th class="old-way">
								<span class="strike-through">Fastlane</span>
							</th>
							<th class="new-way">Canaveral</th>
						</tr>
					</thead>
					<tbody>
						{comparisons.map((row, index) => (
							<tr style={`--delay: ${index * 0.1}s`}>
								<td class="feature-cell">{row.feature}</td>
								<td class="old-cell">
									<span class="old-value">{row.fastlane}</span>
								</td>
								<td class="new-cell">
									<span class="new-value">{row.canaveral}</span>
								</td>
							</tr>
						))}
					</tbody>
				</table>
			</div>

			<!-- Code Comparison -->
			<div class="code-comparison">
				<div class="code-block old-code">
					<div class="code-header">
						<span class="code-label old">Before: Fastfile (Ruby)</span>
					</div>
					<Terminal title="Fastfile" theme="dark">
						<pre><code><span class="muted"># 50+ lines of Ruby for basic iOS build</span>
<span class="keyword">lane</span> <span class="symbol">:beta</span> <span class="keyword">do</span>
  match(
    <span class="symbol">type:</span> <span class="string">"appstore"</span>,
    <span class="symbol">readonly:</span> <span class="boolean">true</span>
  )
  gym(
    <span class="symbol">scheme:</span> <span class="string">"MyApp"</span>,
    <span class="symbol">export_method:</span> <span class="string">"app-store"</span>,
    <span class="symbol">output_directory:</span> <span class="string">"./build"</span>
  )
  pilot(
    <span class="symbol">skip_waiting_for_build:</span> <span class="boolean">true</span>
  )
<span class="keyword">end</span></code></pre>
					</Terminal>
				</div>

				<div class="code-arrow">
					<span class="arrow-icon">→</span>
				</div>

				<div class="code-block new-code">
					<div class="code-header">
						<span class="code-label new">After: canaveral.yaml</span>
					</div>
					<Terminal title="canaveral.yaml" theme="accent">
						<pre><code><span class="muted"># Clean, declarative config</span>
<span class="key">name</span>: <span class="string">"MyApp"</span>

<span class="section">signing</span>:
  <span class="key">enabled</span>: <span class="boolean">true</span>
  <span class="key">provider</span>: <span class="string">"macos"</span>
  <span class="section">match</span>:
    <span class="key">storage</span>: <span class="string">"git"</span>
    <span class="key">git_url</span>: <span class="string">"git@github.com:org/certs"</span></code></pre>
					</Terminal>
				</div>
			</div>

			<div class="comparison-cta">
				<p class="cta-text">Ready to simplify your mobile releases?</p>
				<a href="/canaveral/migration/from-fastlane/" class="migration-link">
					See the Fastlane migration guide →
				</a>
			</div>
		</div>
	</div>
</section>

<style>
	.comparison-section {
		position: relative;
		padding: 6rem 1.5rem;
		background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
		overflow: hidden;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	/* Comparison Table */
	.comparison-table-wrapper {
		overflow-x: auto;
		margin-bottom: 4rem;
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.08);
	}

	.comparison-table {
		width: 100%;
		border-collapse: collapse;
		font-size: 0.9rem;
	}

	.comparison-table th,
	.comparison-table td {
		padding: 1rem 1.5rem;
		text-align: left;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.comparison-table thead {
		background: rgba(255, 255, 255, 0.03);
	}

	.comparison-table th {
		font-weight: 600;
		color: #e8e8f0;
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.comparison-table th.old-way {
		color: #ef4444;
	}

	.comparison-table th.new-way {
		color: #10b981;
	}

	.strike-through {
		text-decoration: line-through;
		opacity: 0.7;
	}

	.comparison-table tbody tr {
		background: rgba(255, 255, 255, 0.01);
		transition: background 0.2s ease;
		opacity: 0;
		animation: fadeIn 0.3s ease forwards;
		animation-delay: var(--delay);
	}

	@keyframes fadeIn {
		to { opacity: 1; }
	}

	.comparison-table tbody tr:hover {
		background: rgba(255, 255, 255, 0.03);
	}

	.feature-cell {
		font-weight: 500;
		color: #e8e8f0;
	}

	.old-cell {
		color: #a8a8b8;
	}

	.old-value {
		text-decoration: line-through;
		opacity: 0.6;
	}

	.new-cell {
		color: #10b981;
	}

	.new-value {
		font-weight: 500;
	}

	/* Code Comparison */
	.code-comparison {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		gap: 2rem;
		align-items: center;
		margin-bottom: 3rem;
	}

	.code-block {
		position: relative;
	}

	.code-header {
		margin-bottom: 0.75rem;
	}

	.code-label {
		display: inline-block;
		padding: 0.375rem 0.75rem;
		border-radius: 6px;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.code-label.old {
		background: rgba(239, 68, 68, 0.1);
		color: #ef4444;
	}

	.code-label.new {
		background: rgba(16, 185, 129, 0.1);
		color: #10b981;
	}

	.code-block pre {
		margin: 0;
		font-size: 0.8rem;
		line-height: 1.6;
	}

	.code-block code {
		font-family: 'JetBrains Mono', 'Fira Code', monospace;
	}

	/* Syntax highlighting */
	.code-block .keyword { color: #ff79c6; }
	.code-block .symbol { color: #bd93f9; }
	.code-block .string { color: #f1fa8c; }
	.code-block .boolean { color: #ff6b35; }
	.code-block .section { color: #8be9fd; }
	.code-block .key { color: #50fa7b; }
	.code-block .muted { color: #6272a4; }

	.code-arrow {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.arrow-icon {
		font-size: 2rem;
		color: #ff6b35;
		animation: arrowPulse 2s ease-in-out infinite;
	}

	@keyframes arrowPulse {
		0%, 100% { transform: translateX(0); opacity: 1; }
		50% { transform: translateX(5px); opacity: 0.7; }
	}

	/* CTA */
	.comparison-cta {
		text-align: center;
		padding: 2rem;
		background: rgba(255, 107, 53, 0.05);
		border: 1px solid rgba(255, 107, 53, 0.15);
		border-radius: 16px;
	}

	.cta-text {
		font-size: 1.125rem;
		color: #e8e8f0;
		margin: 0 0 1rem 0;
	}

	.migration-link {
		color: #ff6b35;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
	}

	.migration-link:hover {
		color: #ffb347;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.code-comparison {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.code-arrow {
			transform: rotate(90deg);
		}
	}

	@media (max-width: 600px) {
		.comparison-section {
			padding: 4rem 1rem;
		}

		.comparison-table th,
		.comparison-table td {
			padding: 0.75rem 1rem;
			font-size: 0.8rem;
		}
	}

	/* Light theme */
	:root[data-theme='light'] .comparison-section {
		background: linear-gradient(180deg, #f8f6f4 0%, #fff5f0 100%);
	}

	:root[data-theme='light'] .comparison-table-wrapper {
		border-color: rgba(0, 0, 0, 0.1);
	}

	:root[data-theme='light'] .comparison-table thead {
		background: rgba(0, 0, 0, 0.02);
	}

	:root[data-theme='light'] .comparison-table th {
		color: #1a1a2e;
	}

	:root[data-theme='light'] .comparison-table th.old-way {
		color: #dc2626;
	}

	:root[data-theme='light'] .comparison-table th.new-way {
		color: #059669;
	}

	:root[data-theme='light'] .comparison-table tbody tr {
		background: rgba(255, 255, 255, 0.5);
	}

	:root[data-theme='light'] .comparison-table tbody tr:hover {
		background: rgba(255, 255, 255, 0.8);
	}

	:root[data-theme='light'] .comparison-table td {
		border-bottom-color: rgba(0, 0, 0, 0.05);
	}

	:root[data-theme='light'] .feature-cell {
		color: #1a1a2e;
	}

	:root[data-theme='light'] .old-cell {
		color: #666;
	}

	:root[data-theme='light'] .new-cell {
		color: #059669;
	}

	:root[data-theme='light'] .comparison-cta {
		background: rgba(224, 90, 43, 0.05);
		border-color: rgba(224, 90, 43, 0.15);
	}

	:root[data-theme='light'] .cta-text {
		color: #1a1a2e;
	}

	:root[data-theme='light'] .migration-link {
		color: #e05a2b;
	}

	:root[data-theme='light'] .migration-link:hover {
		color: #c04920;
	}
</style>
